<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="Hauptformular" Height="450" Width="800">
    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top" Background="#FF444444" Foreground="White" AutomationProperties.AcceleratorKey="Ctrl+R">
            <MenuItem Header="_Datei" Background="#FF444444">
                <MenuItem Header="_Im-/Export" Foreground="Black">
                    <MenuItem Header="_Auswahl exportieren" Foreground="Black"/>
                    <MenuItem Header="_Importieren" Foreground="Black"/>
                </MenuItem>
                <MenuItem Header="_Neue Abfrage" Foreground="Black"/>
                <MenuItem Header="_Aktualisieren" Foreground="Black"/>
                <Separator />
                <MenuItem Header="_Schließen" Foreground="Black"/>
            </MenuItem>
            <MenuItem Header="_Tools" Background="#FF444444">
                <MenuItem Header="_DB Pflege" Foreground="Black"/>
                <MenuItem Header="_Pfade" Foreground="Black"/>
                <Separator />
                <MenuItem Header="_Einstellungen" Foreground="Black"/>
            </MenuItem>
        </Menu>
        <TextBox DockPanel.Dock="Bottom" Background="#FF444444" Foreground="#FFBBBBBB"></TextBox>
        <TextBox DockPanel.Dock="Bottom" Background="#FF21C947" TextAlignment="Center" >Verbunden</TextBox>
        <DockPanel>
            <TextBlock DockPanel.Dock="Top" Margin="10,5" Padding="5" Background="LightGray">Ausgewähltes Dokument: Text</TextBlock>
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MinWidth="100" />
                    <ColumnDefinition Width="5" />
                    <ColumnDefinition Width="*" MinWidth="100"/>
                </Grid.ColumnDefinitions>
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Button Margin="5" Grid.Row="0">Tabelle PP</Button>
                    <Button Margin="5" Grid.Row="1">Tabelle PL</Button>
                    <Button Margin="5" Grid.Row="2">Tabelle PH</Button>
                </Grid>
                <GridSplitter Grid.Column="1" Grid.Row="0" Width="5" HorizontalAlignment="Stretch" />
                <DockPanel Grid.Column="2" Grid.Row="0" Margin="5">
                    <TextBlock DockPanel.Dock="Top" Padding="5" Background="LightGray">gefundene Dokumente</TextBlock>
                    <Grid Grid.Column="2" Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Button Margin="5" Grid.Column="0" Grid.Row="0">Dok 1</Button>
                        <Button Margin="5" Grid.Column="1" Grid.Row="0">Dok 2</Button>
                        <Button Margin="5" Grid.Column="0" Grid.Row="1">Dok 3</Button>
                        <Button Margin="5" Grid.Column="1" Grid.Row="1">Dok 4</Button>
                    </Grid>
                </DockPanel>
            </Grid>
        </DockPanel>
    </DockPanel>
</Window>

