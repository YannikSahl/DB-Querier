<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="Hauptformular" Height="450" Width="800">
    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top" Background="#FF444444" Foreground="White" AutomationProperties.AcceleratorKey="Ctrl+R">
            <MenuItem Header="_Datei" Background="#FF444444">
                <MenuItem Header="_Im-/Export" Foreground="Black">
                    <MenuItem Header="_Auswahl exportieren" Foreground="Black"/>
                    <MenuItem Header="_Importieren" Foreground="Black"/>
                </MenuItem>
                <MenuItem Header="_Neue Abfrage" Foreground="Black" Click="openAbfrageWindow"/>
                <MenuItem Header="_Aktualisieren" Foreground="Black"/>
                <Separator />
                <MenuItem Header="_Schließen" Foreground="Black" Click="CloseApplication"/>
            </MenuItem>
            <MenuItem Header="_Tools" Background="#FF444444">
                <MenuItem Header="_DB Pflege" Foreground="Black"/>
                <MenuItem Header="_Pfade" Foreground="Black"/>
            </MenuItem>
            <MenuItem Header="Extras" Background="#FF444444">
                <MenuItem Header="Einstellungen" Foreground="Black" Click="openSettingsWindow"/>
            </MenuItem>
        </Menu>
        <TextBlock DockPanel.Dock="Bottom" Background="#FF444444" Foreground="#FFBBBBBB"></TextBlock>
        <TextBlock x:Name="ConnectionStatusBar" DockPanel.Dock="Bottom" Background="#FF21C947" Visibility="Collapsed" TextAlignment="Center">Verbunden</TextBlock>
        <DockPanel>

            <DockPanel DockPanel.Dock="Top" Background="#FFE8E8E8">
                <TextBlock DockPanel.Dock="Left" Padding="5" FontWeight="Bold" Margin="5,0,0,0">Ausgewähltes Dokument:</TextBlock>
                <TextBlock x:Name="SelectedPad" DockPanel.Dock="Left" Padding="5" FontWeight="Bold" FontStyle="Italic"></TextBlock>
            </DockPanel>

            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" MinWidth="200" />
                    <ColumnDefinition Width="5" />
                    <ColumnDefinition x:Name="DocumentViewContainer" Width="34" MinWidth="33" MaxWidth="300"/>
                </Grid.ColumnDefinitions>
                <DockPanel Margin="5,0,5,5">
                    <DockPanel DockPanel.Dock="Top" Margin="5,0,5,0">
                        <TextBlock DockPanel.Dock="Left" Padding="5" FontWeight="Bold">Tabellen</TextBlock>
                        <Button DockPanel.Dock="Right" HorizontalAlignment="Right" Width="20"  Padding="5" BorderBrush="{x:Null}">
                            <Button.Background>
                                <ImageBrush ImageSource="/gui_resources/sperren.png" Stretch="Uniform" TileMode="None"/>
                            </Button.Background>
                        </Button>
                        <Button DockPanel.Dock="Right" HorizontalAlignment="Right" Background="#FFF1F1F1" Padding="5" BorderBrush="{x:Null}">Bearbeiten</Button>
                    </DockPanel>
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition MinHeight="150"/>
                            <RowDefinition Height="5"/>
                            <RowDefinition MinHeight="50"/>
                            <RowDefinition Height="5"/>
                            <RowDefinition MinHeight="50"/>
                        </Grid.RowDefinitions>
                        <DataGrid x:Name="PP_TABELLE" Margin="0,5,0,5" Grid.Row="0" ItemsSource="{Binding}" RowEditEnding="PP_TABELLE_RowEditEnding" SelectionChanged="PP_TABELLE_SelectionChanged">
                        </DataGrid>
                        <GridSplitter Grid.Row="1"  Height="5"  HorizontalAlignment="Stretch"/>
                        <DataGrid x:Name="PL_TABELLE" Margin="0,5,0,5" Grid.Row="2"/>
                        <GridSplitter Grid.Row="3" Height="5" HorizontalAlignment="Stretch" />
                        <DataGrid x:Name="PH_TABELLE" Margin="0,5,0,5" Grid.Row="4"/>
                    </Grid>
                </DockPanel>

                <GridSplitter x:Name="ViewSplitter" Grid.Column="1" Grid.Row="0" Width="5" HorizontalAlignment="Stretch" />

                <Expander Grid.Column="2" Grid.Row="0" Margin="5,0,5,5" ExpandDirection="Left" Collapsed="Expander_Collapsed" Expanded="Expander_Expanded">
                    <DockPanel>
                        <TextBlock DockPanel.Dock="Top" Padding="5" FontWeight="Bold">gefundene Dokumente</TextBlock>
                        <StackPanel x:Name="DocumentView"></StackPanel>
                    </DockPanel>
                </Expander>

            </Grid>
        </DockPanel>
    </DockPanel>
</Window>

