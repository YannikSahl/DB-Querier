<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="Hauptformular" Height="450" Width="800">
    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top" Background="#FF444444" Foreground="White" AutomationProperties.AcceleratorKey="Ctrl+R">
            <MenuItem Header="_Datei" Background="#FF444444">
                <MenuItem Header="_Im-/Export" Foreground="Black">
                    <MenuItem Header="_Auswahl exportieren" Foreground="Black"/>
                    <MenuItem Header="_Importieren" Foreground="Black"/>
                </MenuItem>
                <MenuItem Header="_Neue Abfrage" Foreground="Black" Click="openAbfrageWindow"/>
                <MenuItem Header="_Aktualisieren" Foreground="Black"/>
                <Separator />
                <MenuItem Header="_Schließen" Foreground="Black"/>
            </MenuItem>
            <MenuItem Header="_Tools" Background="#FF444444">
                <MenuItem Header="_DB Pflege" Foreground="Black"/>
                <MenuItem Header="_Pfade" Foreground="Black"/>
                <Separator />
                <MenuItem Header="_Einstellungen" Foreground="Black" Click="openSettingsWindow"/>
            </MenuItem>
        </Menu>
        <TextBox DockPanel.Dock="Bottom" Background="#FF444444" Foreground="#FFBBBBBB"></TextBox>
        <TextBox DockPanel.Dock="Bottom" Background="#FF21C947" TextAlignment="Center" >Verbunden</TextBox>
        <DockPanel>
            <TextBlock DockPanel.Dock="Top" Margin="10,5" Padding="5" Background="LightGray">Ausgewähltes Dokument: Text</TextBlock>
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" MinWidth="200" />
                    <ColumnDefinition Width="5" />
                    <ColumnDefinition Width="*" MinWidth="200"/>
                </Grid.ColumnDefinitions>
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <DataGrid x:Name="PP_TABELLE" Margin="5" Grid.Row="0"/>
                    <DataGrid x:Name="PL_TABELLE" Margin="5" Grid.Row="1"/>
                    <DataGrid x:Name="PH_TABELLE" Margin="5" Grid.Row="2"/>
                </Grid>
                <GridSplitter Grid.Column="1" Grid.Row="0" Width="5" HorizontalAlignment="Stretch" />
                <DockPanel Grid.Column="2" Grid.Row="0" Margin="5">
                    <TextBlock DockPanel.Dock="Top" Padding="5" Background="LightGray">gefundene Dokumente</TextBlock>
                    <UniformGrid Rows="2" Columns="2">
                        <Viewbox Stretch="Uniform" Width="140">
                            <Button Foreground="White" FontSize="16" FontWeight="Bold"> .PPTX
                                <Button.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="#FFFF8000" Offset="1"/>
                                        <GradientStop Color="#FFF11414" Offset="0"/>
                                        <GradientStop Color="#FFF83809" Offset="0.157"/>
                                    </LinearGradientBrush>
                                </Button.Background>
                            </Button>
                        </Viewbox>
                        <Viewbox Stretch="Uniform" Width="140">
                            <Button Foreground="White" FontSize="16" FontWeight="Bold">.PPTX
                                <Button.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="#FFFF8000" Offset="1"/>
                                        <GradientStop Color="#FFF11414" Offset="0"/>
                                        <GradientStop Color="#FFF83809" Offset="0.157"/>
                                    </LinearGradientBrush>
                                </Button.Background>
                            </Button>
                        </Viewbox>
                        <Viewbox Stretch="Uniform" Width="140">
                            <Button Foreground="White" FontSize="16" FontWeight="Bold">.PPTX
                                <Button.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="#FFFF8000" Offset="1"/>
                                        <GradientStop Color="#FFF11414" Offset="0"/>
                                        <GradientStop Color="#FFF83809" Offset="0.157"/>
                                    </LinearGradientBrush>
                                </Button.Background>
                            </Button>
                        </Viewbox>
                    </UniformGrid>
                </DockPanel>
            </Grid>
        </DockPanel>
    </DockPanel>
</Window>

