<Window x:Class="GUI.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="Settings" Height="450" Width="800">
    <StackPanel Margin="15,5,15,10">
        <Label FontSize="15" FontWeight="Bold" Padding="15,0,0,0">
            Pfade
        </Label>
        <TextBlock>
            Sharepoint
        </TextBlock>
        <TextBlock>
            Datenbank im Sharepoint
        </TextBlock>
        <TextBlock>
            Skizzen im Sharepoint
        </TextBlock>
        <TextBlock>
            Export Skizzen
        </TextBlock>
        <TextBlock>
            Export DB
        </TextBlock>

        <Label FontSize="15" FontWeight="Bold" Padding="15,0,0,0" Margin="0,5,0,0">
            Design
        </Label>
        <TextBlock>
            Darkmode / Lightmode
        </TextBlock>

        <Label FontSize="15" FontWeight="Bold" Padding="15,0,0,0" Margin="0,5,0,0">
            Sprache
        </Label>
        <TextBlock>
            Deutsch / Englisch
        </TextBlock>
    </StackPanel>
</Window>
