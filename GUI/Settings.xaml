<Window x:Class="GUI.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="Settings" Height="450" Width="800">
    <StackPanel Margin="15,5,15,10">
        <Label FontSize="15" FontWeight="Bold" Padding="15,0,0,0">
            Sharepoint Authentification
        </Label>
        <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0">Name</TextBlock>
            <TextBox x:Name="sp_name" HorizontalAlignment="Left" Width="200" Grid.Row="0" Grid.Column="1" Margin="5"></TextBox>
            <TextBlock Grid.Row="1" Grid.Column="0">Password</TextBlock>
            <PasswordBox x:Name="sp_pw" HorizontalAlignment="Left" Width="200" Grid.Row="1" Grid.Column="1" Margin="5"></PasswordBox>

            <Button Grid.Row="2" Grid.Column="0" HorizontalAlignment="Left" Margin="5" Click="Button_Click">Test Connection</Button>
            <TextBlock x:Name="sp_test" Grid.Row="2" Grid.Column="1" Background="AliceBlue" Margin="5"></TextBlock>
        </Grid>
        <Label FontSize="15" FontWeight="Bold" Padding="15,0,0,0">
            Pfade
        </Label>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">Sharepoint</TextBlock>
            <DockPanel Grid.Row="0" Grid.Column="1" LastChildFill="True" Margin="2">
                <Button DockPanel.Dock="Right">Select</Button>
                <TextBox VerticalContentAlignment="Center"></TextBox>
            </DockPanel>

            <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center">Datenbank im Sharepoint</TextBlock>
            <DockPanel Grid.Row="1" Grid.Column="1" LastChildFill="True" Margin="2">
                <Button DockPanel.Dock="Right">Select</Button>
                <TextBox VerticalContentAlignment="Center"></TextBox>
            </DockPanel>

            <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center">Skizzen im Sharepoint</TextBlock>
            <DockPanel Grid.Row="2" Grid.Column="1" LastChildFill="True" Margin="2">
                <Button DockPanel.Dock="Right">Select</Button>
                <TextBox VerticalContentAlignment="Center"></TextBox>
            </DockPanel>

            <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center">Export DB</TextBlock>
            <DockPanel Grid.Row="3" Grid.Column="1" LastChildFill="True" Margin="2">
                <Button DockPanel.Dock="Right" Click="SelectDirectory">Select</Button>
                <Button DockPanel.Dock="Right" Click="TexBoxLinkEnter">OK</Button>
                <TextBox x:Name="DbSave" VerticalContentAlignment="Center"/>
            </DockPanel>

            <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center">Export Skizzen</TextBlock>
            <DockPanel Grid.Row="4" Grid.Column="1" LastChildFill="True" Margin="2">
                <Button DockPanel.Dock="Right">Select</Button>
                <TextBox VerticalContentAlignment="Center"></TextBox>
            </DockPanel>
        </Grid>

        <Label FontSize="15" FontWeight="Bold" Padding="15,0,0,0" Margin="0,5,0,0">
            Design
        </Label>
        <TextBlock>
            Darkmode / Lightmode
        </TextBlock>

        <Label FontSize="15" FontWeight="Bold" Padding="15,0,0,0" Margin="0,5,0,0">
            Sprache
        </Label>
        <TextBlock>
            Deutsch / Englisch
        </TextBlock>
    </StackPanel>
</Window>
