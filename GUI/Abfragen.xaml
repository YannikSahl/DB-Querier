<Window x:Class="GUI.Abfragen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Abfragen" Height="500" Width="800">
    <DockPanel Margin="10,5,10,5" Background="#FFE8E8E8" LastChildFill="True">

        <DockPanel DockPanel.Dock="Top">
            <TextBlock DockPanel.Dock="Left" FontSize="18" Padding="5" FontWeight="Bold" >Neue Abfrage</TextBlock>
            <Button DockPanel.Dock="Right" Margin="5" Height="30" Width="120" Background="#FF21DC29" HorizontalAlignment="Right">Abfrage Starten</Button>
        </DockPanel>
        <Grid DockPanel.Dock="Top" MinHeight="200">
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <DockPanel Grid.Row="0" Grid.Column="0" Margin="5" Background="LightGray">
                <RadioButton DockPanel.Dock="Top" Margin="5,0,0,0" FontWeight="Bold">Textfelder</RadioButton>
                <Grid Margin="5,0,5,10">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition Height="5"/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <DockPanel>
                        <TextBox DockPanel.Dock="Right" Width="100" Margin="0,5,0,0" ></TextBox>
                        <TextBlock DockPanel.Dock="Left" VerticalAlignment="Bottom" Margin="5,0,0,0" >Strecke</TextBlock>
                    </DockPanel>
                    <DockPanel Grid.Column="1">
                        <TextBox DockPanel.Dock="Right" Width="100" Margin="0,5,0,0" ></TextBox>
                        <TextBlock DockPanel.Dock="Left" VerticalAlignment="Bottom" Margin="5,0,0,0">Auftrag</TextBlock>
                    </DockPanel>
                    <DockPanel Grid.Column="0" Grid.Row="1">
                        <TextBox DockPanel.Dock="Right" Width="100" Margin="0,5,0,0" ></TextBox>
                        <TextBlock DockPanel.Dock="Left" VerticalAlignment="Bottom" Margin="5,0,0,0">Punktart</TextBlock>
                    </DockPanel>
                    <Separator Grid.Row="2" Grid.ColumnSpan="2" Margin="5,0,5,0"></Separator>
                    <DockPanel Grid.Column="0" Grid.Row="3">
                        <TextBox DockPanel.Dock="Right" Width="100" Margin="0,5,0,0" ></TextBox>
                        <TextBlock DockPanel.Dock="Left" VerticalAlignment="Bottom" Margin="5,0,0,0">km</TextBlock>
                    </DockPanel>
                    <DockPanel Grid.Column="1" Grid.Row="3">
                        <TextBox DockPanel.Dock="Right" Width="100" Margin="0,5,0,0" ></TextBox>
                        <TextBlock DockPanel.Dock="Left" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="5,0,0,0" FontStyle="Italic">bis</TextBlock>
                    </DockPanel>
                    <DockPanel Grid.Column="0" Grid.Row="4">
                        <TextBox DockPanel.Dock="Right" Width="100" Margin="0,5,0,0" ></TextBox>
                        <TextBlock DockPanel.Dock="Left" VerticalAlignment="Bottom" Margin="5,0,0,0">Punkt</TextBlock>
                    </DockPanel>
                    <DockPanel Grid.Column="1" Grid.Row="4">
                        <TextBox DockPanel.Dock="Right" Width="100" Margin="0,5,0,0" ></TextBox>
                        <TextBlock DockPanel.Dock="Left" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="5,0,0,0" FontStyle="Italic">bis</TextBlock>
                    </DockPanel>
                    <DockPanel Grid.Column="0" Grid.Row="5">
                        <TextBox DockPanel.Dock="Right" Width="100" Margin="0,5,0,0" ></TextBox>
                        <TextBlock DockPanel.Dock="Left" VerticalAlignment="Bottom" Margin="5,0,0,0">Blatt</TextBlock>
                    </DockPanel>
                    <DockPanel Grid.Column="1" Grid.Row="5">
                        <TextBox DockPanel.Dock="Right" Width="100" Margin="0,5,0,0" ></TextBox>
                        <TextBlock DockPanel.Dock="Left" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="5,0,0,0" FontStyle="Italic">bis</TextBlock>
                    </DockPanel>
                </Grid>
            </DockPanel>
            <DockPanel Grid.Row="0" Grid.Column="1" Margin="5" Background="LightGray">
                <RadioButton DockPanel.Dock="Top" Margin="5,0,0,0" FontWeight="Bold">Eigene SQL Query</RadioButton>
                <TextBox Margin="5"></TextBox>
            </DockPanel>
        </Grid>
        <Grid DockPanel.Dock="Top" MinHeight="120">
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <DockPanel Grid.Row="0" Grid.Column="0" Background="LightGray" Margin="5">
                <TextBlock DockPanel.Dock="Top" Padding="3" FontWeight="Bold">Sortierung</TextBlock>
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <RadioButton Margin="5,0,0,0">Strecke (km)</RadioButton>
                    <RadioButton Grid.Row="1" Margin="5,0,0,0">PAD</RadioButton>
                    <RadioButton Grid.Row="2" Margin="5,0,0,0">Importdatum</RadioButton>
                </Grid>
            </DockPanel>
            <DockPanel Grid.Row="0" Grid.Column="1" Background="LightGray" Margin="5">
                <TextBlock DockPanel.Dock="Top" Padding="3" FontWeight="Bold">gespeicherte Abfragen</TextBlock>
                <DockPanel Margin="5">
                    <Grid DockPanel.Dock="Right" Width="100">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Button Margin="2">hinzufügen</Button>
                        <Button Margin="2" Grid.Row="1">entfernen</Button>
                    </Grid>
                    <TextBox DockPanel.Dock="Left"></TextBox>
                </DockPanel>
            </DockPanel>
        </Grid>
        <Grid DockPanel.Dock="Top" Margin="5" Background="LightGray">
            <DockPanel>
                <TextBlock DockPanel.Dock="Top" Padding="3" FontWeight="Bold">Auswahl über *.csv (QGis)</TextBlock>
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="15"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Button Grid.RowSpan="2" MaxHeight="60">Datei Laden</Button>
                    <TextBlock Grid.Column="1" Padding="10,0,0,0" VerticalAlignment="Center" FontStyle="Italic">Pfad</TextBlock>
                    <TextBox Grid.Column="1" Grid.Row="1" Margin="5,0,0,0" Padding="5"></TextBox>
                </Grid>
            </DockPanel>
        </Grid>
    </DockPanel>
</Window>