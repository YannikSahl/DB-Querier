<Window x:Class="GUI.Abfragen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Abfragen" Height="490" Width="800">
    <DockPanel Margin="10,5,10,5" Background="#FFE8E8E8" LastChildFill="True">

        <DockPanel DockPanel.Dock="Top">
            <TextBlock DockPanel.Dock="Left" FontSize="18" Padding="5" FontWeight="Bold" >Neue Abfrage</TextBlock>
            <Button DockPanel.Dock="Right" Margin="5" Height="30" Width="120" HorizontalAlignment="Right" Click="AbfrageStartButton_Click" BorderBrush="#FF959595" Foreground="White">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFFF8E1D"/>
                        <GradientStop Color="#FFFF3D2A" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background> Abfrage Starten
            </Button>
        </DockPanel>
        <Grid DockPanel.Dock="Top" MinHeight="200">
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <DockPanel Grid.Row="0" Grid.Column="0" Margin="5" Background="LightGray">
                <RadioButton x:Name="QueryInA" DockPanel.Dock="Top" Margin="5,0,0,0" FontWeight="Bold" GroupName="ChooseQuery" IsChecked="True">Textfelder</RadioButton>
                <Grid Margin="5,0,5,10">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition Height="5"/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <DockPanel>
                        <TextBox x:Name="StreckeInput" DockPanel.Dock="Right" Width="100" Height="30" VerticalAlignment="Center" VerticalContentAlignment="Center"></TextBox>
                        <TextBlock DockPanel.Dock="Left" VerticalAlignment="Center" Margin="5,0,0,0" >Strecke</TextBlock>
                    </DockPanel>
                    <DockPanel Grid.Column="1">
                        <TextBox x:Name="AuftragInput" DockPanel.Dock="Right" Width="100" Height="30" VerticalAlignment="Center" VerticalContentAlignment="Center"></TextBox>
                        <TextBlock DockPanel.Dock="Left" VerticalAlignment="Center" Margin="5,0,0,0">Auftrag</TextBlock>
                    </DockPanel>
                    <DockPanel Grid.Column="0" Grid.Row="1">
                        <TextBox x:Name="PunktartInput" DockPanel.Dock="Right" Width="100" Height="30" VerticalAlignment="Center" VerticalContentAlignment="Center"></TextBox>
                        <TextBlock DockPanel.Dock="Left" VerticalAlignment="Center" Margin="5,0,0,0">Punktart</TextBlock>
                    </DockPanel>
                    <Separator Grid.Row="2" Grid.ColumnSpan="2"></Separator>
                    <DockPanel Grid.Column="0" Grid.Row="3">
                        <TextBox DockPanel.Dock="Right" Width="100" Height="30" VerticalAlignment="Center" VerticalContentAlignment="Center"></TextBox>
                        <TextBlock DockPanel.Dock="Left" VerticalAlignment="Center" Margin="5,0,0,0">km</TextBlock>
                    </DockPanel>
                    <DockPanel Grid.Column="1" Grid.Row="3">
                        <TextBox DockPanel.Dock="Right" Width="100" Height="30" VerticalAlignment="Center" VerticalContentAlignment="Center"></TextBox>
                        <TextBlock DockPanel.Dock="Left" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,0,0,0" FontStyle="Italic">bis</TextBlock>
                    </DockPanel>
                    <DockPanel Grid.Column="0" Grid.Row="4">
                        <TextBox DockPanel.Dock="Right" Width="100" Height="30" VerticalAlignment="Center" VerticalContentAlignment="Center"></TextBox>
                        <TextBlock DockPanel.Dock="Left" VerticalAlignment="Center" Margin="5,0,0,0">Punkt</TextBlock>
                    </DockPanel>
                    <DockPanel Grid.Column="1" Grid.Row="4">
                        <TextBox DockPanel.Dock="Right" Width="100" Height="30" VerticalAlignment="Center" VerticalContentAlignment="Center"></TextBox>
                        <TextBlock DockPanel.Dock="Left" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,0,0,0" FontStyle="Italic">bis</TextBlock>
                    </DockPanel>
                    <DockPanel Grid.Column="0" Grid.Row="5">
                        <TextBox DockPanel.Dock="Right" Width="100" Height="30" VerticalAlignment="Center" VerticalContentAlignment="Center"></TextBox>
                        <TextBlock DockPanel.Dock="Left" VerticalAlignment="Center" Margin="5,0,0,0">Blatt</TextBlock>
                    </DockPanel>
                    <DockPanel Grid.Column="1" Grid.Row="5">
                        <TextBox DockPanel.Dock="Right" Width="100" Height="30" VerticalAlignment="Center" VerticalContentAlignment="Center"></TextBox>
                        <TextBlock DockPanel.Dock="Left" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,0,0,0" FontStyle="Italic">bis</TextBlock>
                    </DockPanel>
                </Grid>
            </DockPanel>
            <DockPanel Grid.Row="0" Grid.Column="1" Margin="5" Background="LightGray">
                <RadioButton x:Name="QueryInB" DockPanel.Dock="Top" Margin="5,0,0,0" FontWeight="Bold" GroupName="ChooseQuery">Eigene SQL Query</RadioButton>
                <TextBox x:Name="RawQuery" Margin="5" Padding="5" TextWrapping="Wrap"></TextBox>
            </DockPanel>
        </Grid>
        <Grid DockPanel.Dock="Top" MinHeight="120">
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <DockPanel Grid.Row="0" Grid.Column="0" Background="LightGray" Margin="5">
                <TextBlock DockPanel.Dock="Top" Padding="3" FontWeight="Bold">Sortierung</TextBlock>
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <RadioButton Margin="5,0,0,0" IsChecked="True">Strecke (km)</RadioButton>
                    <RadioButton Grid.Row="1" Margin="5,0,0,0">PAD</RadioButton>
                    <RadioButton Grid.Row="2" Margin="5,0,0,0">Importdatum</RadioButton>
                </Grid>
            </DockPanel>
            <DockPanel Grid.Row="0" Grid.Column="1" Background="LightGray" Margin="5">
                <TextBlock DockPanel.Dock="Top" Padding="3" FontWeight="Bold">gespeicherte Abfragen</TextBlock>
                <DockPanel Margin="5">
                    <Grid DockPanel.Dock="Right">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Button Width="40" Height="40" FontWeight="Bold" FontSize="24" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Click="AddSavedQueryButton_Click" BorderBrush="{x:Null}" Background="#FF6A6A6A" Foreground="White">+</Button>

                        <Button Grid.Row="1" Width="40" Height="40" FontWeight="Bold" FontSize="24" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Click="DeleteSavedQueryButton_Click" BorderBrush="{x:Null}" Foreground="White" Background="#FF6A6A6A">-</Button>
                    </Grid>
                    <DataGrid x:Name="SavedQueriesGrid" DockPanel.Dock="Left" Height="80" BorderBrush="{x:Null}"></DataGrid>
                </DockPanel>
            </DockPanel>
        </Grid>
        <Grid Margin="5" Background="LightGray">
            <DockPanel>
                <TextBlock DockPanel.Dock="Top" Padding="3" FontWeight="Bold">Auswahl über *.csv (QGis)</TextBlock>
                <DockPanel>
                    <Button DockPanel.Dock="Left" Margin="5" Height="30">Datei Laden</Button>
                    <TextBlock DockPanel.Dock="Left" Height="30" Padding="10,0,0,0" VerticalAlignment="Center" FontStyle="Italic">Pfad</TextBlock>
                    <TextBox Margin="5" Padding="5" Height="30"></TextBox>
                </DockPanel>
            </DockPanel>
        </Grid>
    </DockPanel>
</Window>